<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.task.mina.musicapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MusicApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.mainscreen.presenation.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.searchscreen.presentation.view.SearchArtistActivity" />
        <activity
            android:name=".ui.topablums.presetation.view.TopArtistAlbumsActivity"
            android:theme="@style/AppThemeNoActionbar" />
        <activity android:name=".ui.albumdetails.AlbumDetailsActivity"
            android:theme="@style/AppThemeNoActionbar" />
    </application>

</manifest>